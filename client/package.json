{
  "name": "sage-vpn",
  "version": "1.0.0",
  "description": "Sage VPN â€” a minimal WireGuard client UI for Windows.",
  "author": "Aethera Intelligence",
  "main": "main.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "build:ui": "webpack --mode production",
    "pack": "npm run build:ui && electron-builder --dir",
    "dist": "npm run build:ui && electron-builder -w"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.aethera.sagevpn",
    "productName": "Sage VPN",
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      { "from": "wireguard-config", "to": "wireguard-config" }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
